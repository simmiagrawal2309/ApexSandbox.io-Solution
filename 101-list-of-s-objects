public List<sObject> getListOfsObject(List<Account> accounts, List<Contact> contacts)
    {
        List<sObject> sobjectlist=new List<sObject>();
        //check list is not empty
        if(!accounts.isEmpty()){
            for(Account a:accounts){
                sobjectlist.add(a);
            }
        }
        if(!contacts.isEmpty()){
            for(Contact c:contacts){
                sobjectlist.add(c);
            }
        }
        
        
        return sobjectlist;
        // code here
}